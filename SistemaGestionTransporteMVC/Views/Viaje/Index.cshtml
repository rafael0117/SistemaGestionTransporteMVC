@model IEnumerable<SistemaGestionTransporteMVC.Models.Viaje>
@using System.Globalization

@{
    ViewData["Title"] = "Index";
}

<link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4 shadow-lg p-2 ab-3 text-center">Lista de Viajes</h1>
            <div class="card mb-4">
                <div class="card-body">
                    <a type="button" class="btn btn-info btn-sm" asp-action="Create">
                        <i class="bi bi-file-earmark-plus fs-5"></i> Agregar Viaje
                    </a>
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdViaje)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Bus.Modelo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Destino.nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FechaSalida)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FechaLlegada)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Incidencias)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Precio)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdViaje)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Bus.Modelo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Destino.nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaSalida)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaLlegada)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Incidencias)
                                    </td>
                                    <td>
                                        @item.Precio.ToString("C", new CultureInfo("es-PE"))
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", new {id = item.IdViaje})" class="btn btn-warning" role="button">
                                            <i class="bi bi-pencil-square"></i> Editar
                                        </a>
                                        <a href="@Url.Action("Details", new {id = item.IdViaje})" class="btn btn-success" role="button">
                                            <i class="bi bi-info-circle"></i> Detalle
                                        </a>
                                        <a href="@Url.Action("Delete", new {id = item.IdViaje})" class="btn btn-danger" role="button">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="js/scripts.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
<script src="js/datatables-simple-demo.js"></script>