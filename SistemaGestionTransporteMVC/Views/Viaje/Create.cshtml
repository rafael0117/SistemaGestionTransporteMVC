@model SistemaGestionTransporteMVC.Models.Viaje

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>Viaje</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IdViaje" class="control-label"></label>
                <input asp-for="IdViaje" class="form-control" />
                <span asp-validation-for="IdViaje" class="text-danger"></span>
            </div>

            <!-- DropDownList for IdBus -->
            <div class="form-group">
                <label asp-for="IdBus" class="control-label"></label>
                <select asp-for="IdBus" class="form-control" asp-items="@(new SelectList(ViewBag.Buses, "IdBus", "Modelo"))">
                    <option value="">-- Seleccione Bus --</option>
                </select>
                <span asp-validation-for="IdBus" class="text-danger"></span>
            </div>

            <!-- DropDownList for IdDestino -->
            <div class="form-group">
                <label asp-for="IdDestino" class="control-label"></label>
                <select asp-for="IdDestino" class="form-control" asp-items="@(new SelectList(ViewBag.Destinos, "IdDestino", "Nombre"))">
                    <option value="">-- Seleccione Destino --</option>
                </select>
                <span asp-validation-for="IdDestino" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="nombreDestino" class="control-label"></label>
                <input asp-for="nombreDestino" class="form-control" />
                <span asp-validation-for="nombreDestino" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaSalida" class="control-label"></label>
                <input asp-for="FechaSalida" class="form-control" />
                <span asp-validation-for="FechaSalida" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaLlegada" class="control-label"></label>
                <input asp-for="FechaLlegada" class="form-control" />
                <span asp-validation-for="FechaLlegada" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Incidencias" class="control-label"></label>
                <input asp-for="Incidencias" class="form-control" />
                <span asp-validation-for="Incidencias" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

