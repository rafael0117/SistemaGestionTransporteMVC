@model SistemaGestionTransporteMVC.Models.Viaje

@{
    ViewData["Title"] = "Crear Viaje";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg bg-dark text-light">
        <div class="card-header border-bottom border-secondary">
            <h3 class="text-center mb-0">Registrar Nuevo Viaje</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="IdBus" class="form-label">Bus</label>
                    <select asp-for="IdBus" class="form-select bg-secondary text-light border-0"
                            asp-items="@(new SelectList(ViewBag.Buses, "IdBus", "Modelo"))">
                        <option value="">-- Seleccione Bus --</option>
                    </select>
                    <span asp-validation-for="IdBus" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdDestino" class="form-label">Destino</label>
                    <select asp-for="IdDestino" class="form-select bg-secondary text-light border-0"
                            asp-items="@(new SelectList(ViewBag.Destinos, "IdDestino", "nombre"))">
                        <option value="">-- Seleccione Destino --</option>
                    </select>
                    <span asp-validation-for="IdDestino" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FechaSalida" class="form-label">Fecha de salida</label>
                    <input asp-for="FechaSalida" type="datetime-local" class="form-control bg-secondary text-light border-0" />
                    <span asp-validation-for="FechaSalida" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FechaLlegada" class="form-label">Fecha de llegada</label>
                    <input asp-for="FechaLlegada" type="datetime-local" class="form-control bg-secondary text-light border-0" />
                    <span asp-validation-for="FechaLlegada" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Incidencias" class="form-label">Incidencias</label>
                    <textarea asp-for="Incidencias" class="form-control bg-secondary text-light border-0" rows="3" placeholder="Descripción breve"></textarea>
                    <span asp-validation-for="Incidencias" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Precio" class="form-label">Precio (S/)</label>
                    <input asp-for="Precio" type="number" step="0.01" class="form-control bg-secondary text-light border-0" placeholder="0.00" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a class="btn btn-outline-light" asp-action="Index">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
