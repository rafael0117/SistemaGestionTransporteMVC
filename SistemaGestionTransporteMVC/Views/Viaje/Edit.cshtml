@model SistemaGestionTransporteMVC.Models.Viaje

@{
    ViewData["Title"] = "Editar Viaje";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="text-light">Editar Viaje</h1>
        <p class="text-secondary">Actualiza los detalles del viaje seleccionado</p>
    </div>
    <div class="card bg-dark text-light shadow-lg p-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="IdViaje" class="form-label">ID del Viaje</label>
                    <input asp-for="IdViaje" class="form-control bg-secondary text-light border-0" readonly />
                    <span asp-validation-for="IdViaje" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="IdBus" class="form-label">Bus</label>
                    <select asp-for="IdBus" class="form-select bg-secondary text-light border-0" asp-items="ViewBag.Buses">
                        <option value="">Seleccione un bus</option>
                    </select>
                    <span asp-validation-for="IdBus" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="IdDestino" class="form-label">Destino</label>
                    <select asp-for="IdDestino" class="form-select bg-secondary text-light border-0" asp-items="ViewBag.Destinos">
                        <option value="">Seleccione un destino</option>
                    </select>
                    <span asp-validation-for="IdDestino" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="FechaSalida" class="form-label">Fecha de Salida</label>
                    <input asp-for="FechaSalida" type="datetime-local" class="form-control bg-secondary text-light border-0" />
                    <span asp-validation-for="FechaSalida" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FechaLlegada" class="form-label">Fecha de Llegada</label>
                    <input asp-for="FechaLlegada" type="datetime-local" class="form-control bg-secondary text-light border-0" />
                    <span asp-validation-for="FechaLlegada" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Precio" class="form-label">Precio</label>
                    <input asp-for="Precio" type="number" class="form-control bg-secondary text-light border-0" step="0.01" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Incidencias" class="form-label">Incidencias</label>
                <textarea asp-for="Incidencias" rows="3" class="form-control bg-secondary text-light border-0"></textarea>
                <span asp-validation-for="Incidencias" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-outline-light px-4" asp-action="Index">Regresar</a>
                <button type="submit" class="btn btn-primary px-4">Guardar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
