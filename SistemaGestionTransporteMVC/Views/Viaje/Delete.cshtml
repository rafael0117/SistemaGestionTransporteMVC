@model SistemaGestionTransporteMVC.Models.Viaje

@{

    ViewData["Title"] = "Eliminar Viaje";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="text-danger">Eliminar Viaje</h1>
        <p class="text-secondary">¿Estás seguro de que deseas eliminar este viaje?</p>
    </div>

    <div class="card bg-dark text-light shadow-lg p-4">
        <h4 class="text-center mb-4">Detalles del Viaje</h4>
        <hr class="text-light" />

        <dl class="row">
            <dt class="col-sm-3">ID del Viaje</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IdViaje)</dd>

            <dt class="col-sm-3">Bus</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Bus.Modelo)</dd>

            <dt class="col-sm-3">Destino</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Destino.nombre)</dd>

            <dt class="col-sm-3">Fecha de Salida</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaSalida)</dd>

            <dt class="col-sm-3">Fecha de Llegada</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaLlegada)</dd>

            <dt class="col-sm-3">Incidencias</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Incidencias)</dd>

            <dt class="col-sm-3">Precio</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Precio)</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-4">
            <button type="submit" class="btn btn-danger btn-lg w-100">Eliminar Viaje</button>
            <a class="btn btn-secondary btn-lg w-100 mt-3" asp-action="Index">Volver al listado</a>
        </form>
    </div>
</div>
