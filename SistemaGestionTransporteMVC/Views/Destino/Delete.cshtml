@model SistemaGestionTransporteMVC.Models.Destino

@{
    ViewData["Title"] = "Eliminar";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 bg-dark text-white">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Eliminar Destino</h2>
        </div>
        <div class="card-body">
            <h3>¿Estás seguro de que deseas eliminar este destino?</h3>
            <hr />
            <h4>Destino</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2 text-light">
                    @Html.DisplayNameFor(model => model.IdDestino)
                </dt>
                <dd class="col-sm-10 text-light">
                    @Html.DisplayFor(model => model.IdDestino)
                </dd>
                <dt class="col-sm-2 text-light">
                    @Html.DisplayNameFor(model => model.nombre)
                </dt>
                <dd class="col-sm-10 text-light">
                    @Html.DisplayFor(model => model.nombre)
                </dd>
                <dt class="col-sm-2 text-light">
                    @Html.DisplayNameFor(model => model.imagen)
                </dt>
                <dd class="col-sm-10 text-light">
                    @Html.DisplayFor(model => model.imagen)
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-dark text-center">
            <form asp-action="Delete">
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
            </form>
        </div>
    </div>
</div>
