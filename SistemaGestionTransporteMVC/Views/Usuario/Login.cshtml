@model SistemaGestionTransporteMVC.Models.Usuario
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<h1>Login</h1>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Iniciar Sesión</h2>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }

            <form asp-action="login" method="post">
                <div class="form-group mb-3">
                    <label for="Username">Usuario</label>
                    <input type="text" asp-for="Username" class="form-control" placeholder="Ingrese su usuario" required />
                </div>

                <div class="form-group mb-3">
                    <label for="Clave">Contraseña</label>
                    <input type="password" asp-for="Clave" class="form-control" placeholder="Ingrese su contraseña" required />
                </div>

                <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
            </form>
        </div>
    </div>
</div>
