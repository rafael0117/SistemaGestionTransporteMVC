@model IEnumerable<SistemaGestionTransporteMVC.Models.RevisionBus>

@{
    ViewData["Title"] = "Index";
}

<link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4 shadow-lg p-2 ab-3 text-center">Lista Revision de Buses</h1> 
            <div class="card mb-4">
                <div class="card-body">
                    <a type="button" class="btn btn-info btn-sm" asp-action="Create">
                        <i class="bi bi-file-earmark-plus fs-5"></i> Agregar Revisión Bus
                    </a>
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.IdRevision)</th>
                                <th>@Html.DisplayNameFor(model => model.FechaRevision)</th>
                                <th>@Html.DisplayNameFor(model => model.TipoRevision)</th>
                                <th>@Html.DisplayNameFor(model => model.Resultado)</th>
                                <th>@Html.DisplayNameFor(model => model.Observaciones)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.IdRevision)</td>
                                <td>@Html.DisplayFor(modelItem => item.FechaRevision)</td>
                                <td>@Html.DisplayFor(modelItem => item.TipoRevision)</td>
                                <td>@Html.DisplayFor(modelItem => item.Resultado)</td>
                                <td>@Html.DisplayFor(modelItem => item.Observaciones)</td>
                                <td>
                                    <a href="@Url.Action("Edit", new {id = item.IdRevision})" class="btn btn-warning" role="button">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <a href="@Url.Action("Details", new {id = item.IdRevision})" class="btn btn-success" role="button">
                                        <i class="bi bi-info-circle"></i> Detalle
                                    </a>
                                    <a href="@Url.Action("Delete", new {id = item.IdRevision})" class="btn btn-danger" role="button">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="js/scripts.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
<script src="js/datatables-simple-demo.js"></script>