@model SistemaGestionTransporteMVC.Models.RevisionBus

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Detalles de la Revisión</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">ID Revisión</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IdRevision)</dd>

                <dt class="col-sm-4">Fecha de Revisión</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaRevision)</dd>

                <dt class="col-sm-4">Tipo de Revisión</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TipoRevision)</dd>

                <dt class="col-sm-4">Resultado</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Resultado)</dd>

                <dt class="col-sm-4">Observaciones</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Observaciones)</dd>
            </dl>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </div>
    </div>
</div>
