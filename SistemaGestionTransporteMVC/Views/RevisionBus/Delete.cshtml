@model SistemaGestionTransporteMVC.Models.RevisionBus

@{
    ViewData["Title"] = "Eliminar";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 bg-dark text-white">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Eliminar RevisionBus</h2>
        </div>
        <div class="card-body">
            <h3>¿Estás seguro de que deseas eliminar este registro?</h3>
            <div>
                <h4>RevisionBus</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdRevision)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdRevision)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.FechaRevision)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FechaRevision)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TipoRevision)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TipoRevision)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Resultado)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Resultado)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Observaciones)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Observaciones)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="card-footer bg-dark text-center">
            <form asp-action="Delete">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </form>
        </div>
    </div>
</div>
