@model SistemaGestionTransporteMVC.Models.Bus

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 bg-dark text-white">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Eliminar Bus</h2>
        </div>
        <div class="card-body">
            <h4>¿Estás seguro de que deseas eliminar este registro?</h4>
            <dl class="row mt-4">
                <dt class="col-sm-3 fw-bold text-light">
                    @Html.DisplayNameFor(model => model.IdBus)
                </dt>
                <dd class="col-sm-9">
                    <span class="text-white">@Html.DisplayFor(model => model.IdBus)</span>
                </dd>

                <dt class="col-sm-3 fw-bold text-light">
                    @Html.DisplayNameFor(model => model.Modelo)
                </dt>
                <dd class="col-sm-9">
                    <span class="text-white">@Html.DisplayFor(model => model.Modelo)</span>
                </dd>

                <dt class="col-sm-3 fw-bold text-light">
                    @Html.DisplayNameFor(model => model.Marca)
                </dt>
                <dd class="col-sm-9">
                    <span class="text-white">@Html.DisplayFor(model => model.Marca)</span>
                </dd>

                <dt class="col-sm-3 fw-bold text-light">
                    @Html.DisplayNameFor(model => model.Anio)
                </dt>
                <dd class="col-sm-9">
                    <span class="text-white">@Html.DisplayFor(model => model.Anio)</span>
                </dd>

                <dt class="col-sm-3 fw-bold text-light">
                    @Html.DisplayNameFor(model => model.Capacidad)
                </dt>
                <dd class="col-sm-9">
                    <span class="text-white">@Html.DisplayFor(model => model.Capacidad)</span>
                </dd>

                <dt class="col-sm-3 fw-bold text-light">
                    @Html.DisplayNameFor(model => model.Placa)
                </dt>
                <dd class="col-sm-9">
                    <span class="text-white">@Html.DisplayFor(model => model.Placa)</span>
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete" class="m-0">
                <button type="submit" class="btn btn-danger">Eliminar</button>
            </form>
            <a class="btn btn-secondary" asp-action="Index">Regresar a la Lista</a>
        </div>
    </div>
</div>
