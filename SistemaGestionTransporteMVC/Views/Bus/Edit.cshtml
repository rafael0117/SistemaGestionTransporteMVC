@model SistemaGestionTransporteMVC.Models.Bus

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 bg-dark text-white">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Editar Información del Bus</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-danger text-white border-0"></div>

                <div class="form-group mb-3">
                    <label asp-for="IdBus" class="form-label fw-bold text-light"></label>
                    <input asp-for="IdBus" class="form-control bg-secondary text-white border-0" readonly />
                    <span asp-validation-for="IdBus" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Modelo" class="form-label fw-bold text-light"></label>
                    <input asp-for="Modelo" class="form-control bg-secondary text-white border-0" />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Marca" class="form-label fw-bold text-light"></label>
                    <input asp-for="Marca" class="form-control bg-secondary text-white border-0" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Anio" class="form-label fw-bold text-light"></label>
                    <input asp-for="Anio" class="form-control bg-secondary text-white border-0" />
                    <span asp-validation-for="Anio" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Capacidad" class="form-label fw-bold text-light"></label>
                    <input asp-for="Capacidad" class="form-control bg-secondary text-white border-0" />
                    <span asp-validation-for="Capacidad" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Placa" class="form-label fw-bold text-light"></label>
                    <input asp-for="Placa" class="form-control bg-secondary text-white border-0" />
                    <span asp-validation-for="Placa" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <input type="submit" value="Guardar Cambios" class="btn btn-success me-2" />
                    <a class="btn btn-secondary" asp-action="Index">Regresar a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
