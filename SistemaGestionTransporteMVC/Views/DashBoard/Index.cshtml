@model SistemaGestionTransporteMVC.Models.DashboardResumen

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4">Panel de Administración</h2>

<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3 shadow">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title">Usuarios</h5>
                    <p class="card-text fs-4">@Model.TotalUsuarios</p>
                </div>
                <i class="fas fa-users fa-2x"></i>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-success mb-3 shadow">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title">Viajes</h5>
                    <p class="card-text fs-4">@Model.TotalViajes</p>
                </div>
                <i class="fas fa-route fa-2x"></i>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-info mb-3 shadow">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title">Buses</h5>
                    <p class="card-text fs-4">@Model.TotalBuses</p>
                </div>
                <i class="fas fa-bus-alt fa-2x"></i>
            </div>
        </div>
    </div>
</div>
